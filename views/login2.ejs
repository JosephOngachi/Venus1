<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .password-input {
            position: relative;
        }
        .password-input input {
            padding-right: 30px; /* Adjust according to icon size */
        }
        .toggle-password {
            position: absolute;
            top: 50%;
            right: 5px; /* Adjust the position as needed */
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Log in to Venus</h2>
        <form action="/login" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="username" placeholder="Enter your name" required autocomplete="off">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <div class="password-input">
              <input type="password" id="password" name="password" placeholder="Password" required>
              <span class="toggle-password" onclick="togglePasswordVisibility()">
                <i class="fas fa-eye"></i>
              </span>
            </div>
          </div>
          <button type="submit" class="submit-btn">Login</button>
        </form>
        <p>Don't have an account? <a class="link" href="/signup">SignUp</a></p>
    </div>

    <script>
      function togglePasswordVisibility() {
        const passwordInput = document.getElementById('password');

        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
        } else {
          passwordInput.type = 'password';
        }
      }
    </script>
</body>
</html>
